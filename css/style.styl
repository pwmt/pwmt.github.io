width = 800px

/* mixins */
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

transition(arg)
  -webkit-transition arg
  -moz-transition arg
  -o-transition arg
  -ms-transition arg
  transition arg

html
  width 100%
  height 100%
  background #fff
  color #363636
  font-size 100.01%

body
  font-size 14px
  font-family Georgia, serif

  color #555555
  background none

/* header */
h1, h2, h3, h4, h5, h6
  font-family 'Droid Serif', Georgia, serif
  font-weight normal

h1
  font-size 30px
  line-height 36px
  margin-bottom 15px

h2
  font-size 24px
  line-height 30px
  margin-bottom 15px

h3
  font-size 18px
  line-height 28px
  margin-bottom 12px

h4
  font-weight bold
  font-size 16px
  line-height 28px
  margin-bottom 12px

h5
  font-size 14px
  line-height 28px
  margin-bottom 12px

h6
  font-size 13px
  line-height 28px
  margin-bottom 12px

/* links */
a
  text-decoration none
  color #9FBC00

a:hover
  color #555555

/* other */
hr
  border-color #DDDDDD
  border-style none none dotted
  border-width 0 0 1px
  height 1px
  margin 20px 0 30px

p
  margin-bottom 15px
  line-height 1.5em

p.description
  color #BABABA
  text-transform uppercase
  font-style italic

h1
  margin-bottom 0px

em
  font-style italic

strong
  font-weight bold

pre
  padding 15px
  background-color #F5F5F5

  border-width 1px
  border-style solid
  border-color #DDD

  font-family monospace
  line-height 1.2em
  font-size 12px

  margin-bottom 15px

code
  font-family monospace
  font-size 12px

.last
  margin-bottom 0 !important

/* clear class */
.clear, .clearfix:after
  clear both
  display block
  font-size 0
  line-height 0
  visibility hidden

/* images */
img
  height auto
  max-width 100%

/* lists */
ul, ol
  list-style-type none
  list-style-position outside

.content
  ul
    margin-bottom 20px
    list-style-type disc
    margin-left 20px

    li
      margin-bottom 8px

/* table */
table
  margin-bottom 15px

  th
    text-align left
    font-weight bold
    padding 5px

    background-color #D9D9D9

  tr
    margin-bottom 5px
    border-bottom-width 1px
    border-bottom-style dotted
    border-bottom-color #DDD

    td
      padding 5px
      padding-left 12px
      padding-right 12px

      border-right-width 1px
      border-left-width 1px
      border-style dotted
      border-color #DDD

  tr.even
    background-color #F7F7F7

/* layout */
.page_wrapper
  width width
  margin 0 auto

header
  margin-left 10px
  margin-right 10px

  border-bottom-width 1px
  border-bottom-style solid
  border-bottom-color #F3F3F3

  margin-top 20px
  margin-bottom 10px
  padding-bottom 5px

  ul
    float right
    padding-top 8px

    li
      float left
      position relative

      a
        font-weight bold
        font-size 12px
        text-transform uppercase
        color #222

        padding 5px 12px

    li.last a
      padding-right 0px

  .logo
    float left

#main
  margin-left 10px
  margin-right 10px

#footer
  margin-left 10px
  margin-right 10px

  padding-top 10px
  padding-bottom 10px

  border-top-width 1px
  border-top-style solid
  border-top-color #EEE

  font-size 10px
  color #999

  text-align right

  a
    text-transform uppercase
    color #999

.submenu
  border-bottom-width 1px
  border-bottom-style solid
  border-bottom-color #F3F3F3

  padding-bottom 10px
  margin-bottom 10px

ul#submenu
  li
    float left
    position relative

    font-weight bold
    font-size 12px
    text-transform uppercase

    padding 5px
    padding-left 0px
    padding-right 24px
