html
  width 100%
  height 100%
  background #fff
  color #363636
  font-size 100.01%

body
  letter-spacing 0.1
  font-family Georgia

h1, h2, h3, h4, h5, h6
  color: #222222

h1
  font-size 3.2em
  line-height .8em
  margin-bottom .7em

h2
  font-size 1.8em
  line-height .8em
  margin-bottom .7em

h3
  font-size 1.4em
  line-height 1
  margin-bottom .7em

h4
  font-size 1.2em
  margin-bottom .7em

h5
  font-size 1.1em
  margin-bottom .5em

p
  margin-bottom 1.5em
  line-height 1.4em

ul, ol
  padding-left 1.5em
  margin-bottom 1.5em

ul
  list-style-type disc

ol
  list-style-type decimal

li
  margin-bottom 0.5em
  line-height 1.1em

pre, code
  margin-bottom 1.5em
  font-family Monospace
  line-height 2em

em
  font-style italic
  font-family

a
  color #8F9260

ul#submenu
  list-style-type none

  li
    padding 0 10px 0
    float left

.clearfix
  &:before, &:after
    content ""
    display table
  &:after
    clear both

// navigation
header
  position relative
  padding 10px 0 10px 10px

nav

  ul#menu
    list-style-type none
    overflow hidden
    margin 0
    padding 0

    li
      display block
      float left
      height 100px
      position relative
      text-align center
      width 20%
      margin 0
      padding 0

      a
        background-color #F1F1F1
        border-radius 5px
        display block
        height 100%
        line-height 1em
        margin-right 10px
        overflow hidden
        width auto
        text-decoration none
        text-transform none
        color #C3C5B6

        span
          display block
          width 100%
          height 100%
          padding-top 17px

      a.logo
        background-color #333333
        background-image url("/img/logo.png")
        background-position center center
        background-repeat no-repeat
        border-radius 5px
        display block
        width auto
        height 100%
        position relative
        text-indent -9999px

      a.logo:hover
        background-color #5F5F5F

      a:hover
        background-color #C1CBB6
        color #605E5F

#main
  position relative
  overflow hidden
  margin-left 10px

#sidebar
  width 20%
  float left

#content
  float left
  width 80%


