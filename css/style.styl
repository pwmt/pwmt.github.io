width = 960px

@font-face 
  font-family: 'Logisoso';
  src url(fonts/Logisoso.ttf);
  font-weight: normal;
  font-style: normal;

/* mixins */
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
transition(arg)
  -webkit-transition arg
  -moz-transition arg
  -o-transition arg
  -ms-transition arg
  transition arg

html
  width 100%
  height 100%
  background #fff
  color #363636
  font-size 100.01%

body
  letter-spacing 0.1
  font-family Georgia

h1, h2, h3, h4, h5, h6
  font-family "Logisoso"
  text-transform uppercase

  color: #222222

h1
  font-size 3.2em
  line-height .8em
  margin-bottom .7em

h2
  font-size 1.8em
  line-height .8em
  margin-bottom .7em

h3
  font-size 1.4em
  line-height 1
  margin-bottom .7em

h4
  font-size 1.2em
  margin-bottom .7em

h5
  font-size 1.1em
  margin-bottom .5em

p
  margin-bottom 1.5em
  line-height 1.4em

ul, ol
  padding-left 1.5em
  margin-bottom 1.5em

ul
  list-style-type disc

ol
  list-style-type decimal

li
  margin-bottom 0.5em
  line-height 1.1em

pre, code
  margin-bottom 1.5em
  font-family Monospace
  line-height 2em

em
  font-style italic
  font-family

a
  color #8F9260

.clearfix
  &:before, &:after
    content ""
    display table
  &:after
    clear both

// navigation
header
  min-width width
  position relative
  padding 10px 0 10px 10px

nav

  ul#menu
    list-style-type none
    overflow hidden
    margin 0
    padding 0

    li
      display block
      float left
      height 60px
      position relative
      text-align center
      width 20%
      margin 0
      padding 0

      a
        font-family "Logisoso"
        font-size 1.2em
        letter-spacing 0.05em
        background-color #F1F1F1
        border-radius 5px
        display block
        height 100%
        line-height 1em
        margin-right 10px
        overflow hidden
        width auto
        text-decoration none
        text-transform uppercase
        color #666

        span
          display block
          width 100%
          height 100%
          padding-top 20px

      a.logo
        background-color #333333
        background-image url("/img/logo.png")
        background-position center center
        background-repeat no-repeat
        border-radius 5px
        display block
        width auto
        height 100%
        position relative
        text-indent -9999px

      a.logo:hover
        background-color #5F5F5F

      a:hover
        background-color #C1CBB6
        color #605E5F

#main
  min-width width
  position relative
  overflow hidden
  margin-left 10px
  margin-right 10px

div.sidebar
  width 20%
  float left

div.content_sidebar
  float left
  width 80%

div.content
  width 100%

#content
  background-color #F1F1F1
  border-radius 5px
  display block
  margin-bottom 10px
  padding 15px

pre.sourceCode, pre
  background-color #F1F1F1
  padding 10px
  border-radius 5px

div.submenu
  background-color #F1F1F1
  border-radius 5px
  display block
  margin-right 10px
  padding 15px
  margin-bottom 10px

ul#submenu
  list-style-type none
  margin-top 0.5em
  margin-bottom 0

#footer
  background-color #F1F1F1
  border-radius 5px
  display block
  margin-right 10px
  margin-left 10px
  padding 15px
  margin-bottom 10px
